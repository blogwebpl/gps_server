{
	"extends": ["node", "mocha/test", "mocha/es6"],
	"rules": {
		"no-require-imports": 0,
		"no-sync": 0,
		"import/no-commonjs": 0,
		"import/no-nodejs-modules": 0,
		"no-console": 0,
		"no-process-exit": 0,
		"indent": [ 2, "tab", {"SwitchCase": 1} ],
		"no-tabs": 0,
		"arrow-parens": 0,
		"space-before-function-paren": [ 2, "never" ],
		"arrow-body-style": 0,
		"no-invalid-this": 0,
		"class-methods-use-this": 0,
		"new-cap": 0
	}
}
